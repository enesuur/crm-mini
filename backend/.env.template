# Environment Configuration
NODE_ENV=development               # Application environment (development, production, test)
PORT=8000                         # Port number your server will run on
HOST=localhost                    # Server host address
MONGO_URI=mongodb://localhost:27017/  # MongoDB connection URI

# CORS Settings
CORS_ORIGIN=http://localhost:*    # Allowed CORS origin (frontend URL)

# Rate Limiting
COMMON_RATE_LIMIT_WINDOW_MS=360000000   # Rate limit window duration in milliseconds
COMMON_RATE_LIMIT_MAX_REQUESTS=1000000  # Max number of requests allowed in the window
MAX_PAYLOAD_SIZE=10                      # Maximum payload size in MB
API_VERSION=/api/v1                      # API version prefix

# JWT (JSON Web Token)
JWT_SECRET='your-secret-key'                 # Secret key for signing JWT tokens

# Redis Configuration
REDIS_HOST=127.0.0.1                # Redis server host address
REDIS_PORT=6379                     # Redis server port
REDIS_PASSWORD=                     # Redis password (leave empty if none)
REDIS_DB=0                         # Redis database number (default 0)

# CORS Origin (alternative)
CORS_ORIGIN=*                      # Use this to allow all domains
